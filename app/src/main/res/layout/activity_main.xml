<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="#FBF3F3"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#111111"
            android:textAlignment="textEnd"
            android:enabled="false"
            android:id="@+id/etOperaciones"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:textAlignment="textEnd"
            android:textColor="#01C4DD"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:id="@+id/tvResultado"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_marginTop="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_weight="1"
            android:layout_margin="0dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FBF3F3"
                android:enabled="false"
                android:text=""
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FBF3F3"
                android:enabled="false"
                android:text=""
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FBF3F3"
                android:enabled="false"
                android:text=""
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="del"
                android:textColor="#F63131"
                android:textSize="20dp"
                android:layout_weight="2"
                android:background="#FBF3F3"
                android:onClick="Delete"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            android:layout_margin="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_weight="2"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pow"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Pow"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:layout_weight="2"
                    android:background="#000000"
                    android:text="!"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:onClick="Factorial"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sin"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Seno"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="csc"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:layout_marginRight="0dp"
                    android:onClick="Cosecante"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_weight="2"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sqrt"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Raiz"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="log"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Log10"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cos"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Coseno"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sec"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Secante"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_weight="2"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cbrt"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Raiz3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ln"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="LogN"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tan"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Tangente"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ctg"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="0.4dp"
                    android:layout_marginVertical="0.4dp"
                    android:onClick="Cotangente"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9"
            android:weightSum="10"
            android:background="#F1EAEA"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="8"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="25dp"
                    android:textColor="#F63131"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Clear"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( )"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#01C4DD"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Parentesis"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="md"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#01C4DD"
                    android:background="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Mod"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#01C4DD"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Div"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="8"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Seven"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Eight"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Nine"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#01C4DD"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Mult"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="8"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Four"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Five"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Six"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#01C4DD"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Resta"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="8"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="One"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Two"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Three"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#01C4DD"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:onClick="Suma"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="8"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Negative"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Zero"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Dot"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:textColor="#FFFFFF"
                    android:background="#01C4DD"
                    android:padding="25dp"
                    android:layout_margin="0.4dp"
                    android:onClick="Equals"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>